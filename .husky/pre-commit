#!/usr/bin/env sh

set -e

if command -v bun >/dev/null 2>&1; then
  # bun is already available on PATH; use existing installation
  :
elif [ -x "$HOME/.bun/bin/bun" ]; then
  export PATH="$HOME/.bun/bin:$PATH"
else
  echo "Error: 'bun' is not installed or not found on PATH (also checked \$HOME/.bun/bin)." >&2
  echo "Please install Bun (https://bun.sh) or add it to your PATH before committing." >&2
  exit 1
fi

ROOT="$(git rev-parse --show-toplevel)"
cd "$ROOT/frontend"

bunx lint-staged