{
  "formatter": "language_server",
  "languages": {
    "JavaScript": {
      "formatter": {
        "language_server": {
          "name": "biome",
        },
      },
    },
    "TypeScript": {
      "formatter": {
        "language_server": {
          "name": "biome",
        },
      },
    },
    "TSX": {
      "formatter": {
        "language_server": {
          "name": "biome",
        },
      },
    },
  },
  "format_on_save": "on",
  "code_actions_on_format": {
    "source.fixAll.biome": true,
    "source.organizeImports.biome": true,
    "semicolons": false,
    "formatter.formatWithErrors": true
  },
}
